require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "sinatra-doc"
    gemspec.summary = "self documentaion for your sinatra app's routes"
    gemspec.description = "self documentaion for your sinatra app's routes"
    gemspec.email = "d.tangren@gmail.com"
    gemspec.homepage = "http://github.com/softprops/sinatra-doc"
    gemspec.authors = ["Doug Tangren"]
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end